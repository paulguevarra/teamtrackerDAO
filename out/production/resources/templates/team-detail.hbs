{{#partial "content"}}
    <div class="well">
        <h5>Team name:</h5>
        <p>{{ teams.teamname }}</p>
        <h5>Team details:</h5>
        <p>{{teams.description}}</p>
        <p>Team ID# {{teams.teamid}}</p>
        <h5>Team Roster Members:</h5>

            {{#if members}}
                {{#each members}}
                        <li> Member ID# {{memberid}} &nbsp;&nbsp; Member name:&nbsp;{{membername}}&nbsp;&nbsp;<p class ="btn btn-warning btn-xs"><a href="/teams/{{this.teamid}}/members/{{this.memberid}}/update">Edit member</a></p>&nbsp;<p class ="btn btn-danger btn-xs"><a href="/teams/{{this.teamid}}/members/{{this.memberid}}/delete">Delete member</a></p>
                        </li>
                {{/each}}
            {{/if}}

        <br>
        <p class="btn btn-success"><a href="/teams/{{teams.teamid}}/update">Modify Team Info or Add Member</a></p> &nbsp;
        <!--<p class="btn btn-info"><a href="/teams/{{teams.teamid}}/members/new">Add Member</a></p> &nbsp;-->
        <p class="btn btn-danger"><a href="/teams/{{teams.teamid}}/delete">Delete Team</a></p> &nbsp;
        <p class="btn btn-warning"><a href="/">Return to Home Page</a></p>
    </div>
{{/partial}}

{{> layout.hbs}}